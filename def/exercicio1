anos = []
meses = []
dias = []
def calcular_idade_em_dias(anos, meses, dias):
    idade_em_dias = anos * 365 + meses * 30 + dias
    return idade_em_dias
anos = int(input("digite quantos anos voce tem:"))
meses = int(input("digite quantos meses ja passou do seu aniversario:"))
dias = int(input("digite quantos dias alem dos meses:"))
idade_em_dias = anos * 365 + meses * 30 + dias 
print(idade_em_dias)