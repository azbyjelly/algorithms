def retornar_primeiros_caracteres(string, numero):
    if numero > len(string):
			numero = len(string) 
		for i in range(numero):
				print(string[i], end="")

string = int(input("digite uma string"))
numero = int(input("digite um numero"))
retornar_primeiros_caracteres(string, numero)

