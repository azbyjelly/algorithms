vetor = [1, 5, 7, 2, 4, 6, 3, 8, 10]
menor = vetor [0]
for valor in vetor:
    if valor < menor:
        menor = valor

print("Menor valor: ", menor)

#com def 

def receber_valores(qtd_vezes):
    vetor = []
    for j in range(qtd_vezes):
        valor = int(input("digite um valor: "))
        vetor.append(valor)
    return vetor


def encontrar_maior():
    menor = vetor[0]
    for i in range(len(vetor)):
        if vetor[i] < menor:
            menor = vetor[i]
    return menor

qtd_vezes = int(input("digite quantas vezes: "))
vetor = receber_valores(qtd_vezes)
menor = encontrar_maior()
print(menor)
