chico_altura = 1.50
ze_altura = 1.30
crescimento_chico = 0.02
crescimento_ze = 0.03
anos = 0

while ze_altura < chico_altura:
      chico_altura = chico_altura + crescimento_chico
      ze_altura = ze_altura + crescimento_ze
      anos += 1

print(f"são necessários {anos} anos para que zé seja maior que chico.")