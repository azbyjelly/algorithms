import math

# Ler o valor de N
N = int(input("Digite um valor inteiro e positivo: "))

# Inicializar a vari√°vel de soma
E = 1

# Loop para calcular a soma
for i in range(1, N + 1):
    fatorial = math.factorial(i)
    termo = 1 / fatorial
    E += termo

# Exibir o valor de E
print("Valor de E:", E)
